{
  "name": "@termosdev/cli",
  "version": "0.3.2",
  "description": "Interactive UI runner for Claude Code using Zellij floating panes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "termos": "dist/index.js"
  },
  "files": [
    "dist",
    ".claude-plugin",
    "skills",
    "templates",
    "!dist/**/*.map"
  ],
  "scripts": {
    "build": "tsc && cp -r src/templates dist/ && npm run bundle:ink-runner",
    "bundle:ink-runner": "node scripts/bundle-ink-runner.mjs",
    "dev": "npm run serve",
    "dev:cli": "tsc --watch",
    "serve": "python -m http.server 8005 --directory docs",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/termos-dev/termos.git"
  },
  "author": "termos-dev",
  "homepage": "https://github.com/termos-dev/termos#readme",
  "bugs": {
    "url": "https://github.com/termos-dev/termos/issues"
  },
  "keywords": [
    "ide",
    "interactive",
    "terminal",
    "claude-code",
    "ai-agent",
    "zellij"
  ],
  "license": "MIT",
  "dependencies": {
    "@termosdev/shared": "file:packages/shared",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  }
}
