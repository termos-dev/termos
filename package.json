{
  "name": "@termosdev/cli",
  "version": "0.2.0",
  "description": "Interactive Development Environment for Claude Code - manage processes, terminals, and interactive UIs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "termos": "dist/index.js"
  },
  "files": [
    "dist",
    ".claude-plugin",
    "!dist/**/*.map"
  ],
  "scripts": {
    "build": "tsc && npm run bundle:ink-runner",
    "bundle:ink-runner": "node scripts/bundle-ink-runner.mjs",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buremba/claude-ide.git"
  },
  "author": "buremba",
  "homepage": "https://github.com/buremba/claude-ide#readme",
  "bugs": {
    "url": "https://github.com/buremba/claude-ide/issues"
  },
  "keywords": [
    "ide",
    "interactive",
    "dev-server",
    "terminal",
    "process-manager",
    "claude-code",
    "ai-agent",
    "tmux",
    "dashboard"
  ],
  "license": "MIT",
  "dependencies": {
    "@termosdev/shared": "file:packages/shared",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  }
}
